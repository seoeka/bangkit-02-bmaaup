<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KamaiKomiu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/greenLight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_kamaikomiu</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.KamaiKomiu</item>
    </style>
    <!--    Text Style    -->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyleB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.MarginDetail">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="fontFamily">@font/manrope_bold</item>
    </style>

    <style name="TextStyle.Normal">
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextStyleB.Bold">
        <item name="fontFamily">@font/manrope_bold</item>
    </style>

    <style name="TextStyleB.Normal">
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextStyleB.Bold.MarginDetail">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="TextStyleB.Normal.MarginDetail">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
</resources>